//顶部条
.headband {
    height: 2.0px;
    background-image: linear-gradient(90deg, #F79533 0%, #F37055 15%, #EF4E7B 30%, #A166AB 44%, #5073B8 58%, #1098AD 72%, #07B39B 86%, #6DBA82 100%);
	+mobile(){
		height: 0px;
		background: #fff;
  }
}

// 文章标题字体  // 参考：https://github.com/karellincoln/hexo-theme-next/blob/master/source/css/_custom/custom.styl
.posts-expand .post-title {
    font-size: 26px;
    font-weight: 700;
}
// 文章标题动态效果
.posts-expand .post-title-link::before {
    background-image: linear-gradient(90deg, #a166ab 0%, #ef4e7b 25%, #f37055 50%, #ef4e7b 75%, #a166ab 100%);
}


//参考：https://github.com/Lruihao/lruihao.github.io/blob/hexo/themes/next-old/source/css/_custom/custom.styl
//背景图
body { 
    background-image: url(/images/bg6.jpg);
    background-attachment: fixed; // 不随屏幕滚动而滚动fixed,scroll,inherit
    background-repeat: no-repeat; // 如果背景图不够屏幕大小则重复铺，改为no-repeat则表示不重复铺
    background-size: cover; // contain等比例铺满屏幕 //cover拉伸铺满
    background-position: bottom;//x,y轴调整
    +mobile(){
		background: #f5f7f9;
		//background-size: cover;
    }
}


//首部背景
.site-meta {
    height: 100px;
    background-image: url("/images/site-meta.jpg");
    background-size: cover;
}

